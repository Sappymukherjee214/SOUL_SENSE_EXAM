# SoulSense API Environment Configuration

# Application settings
APP_ENV=development
HOST=127.0.0.1
PORT=8000
DEBUG=True

# Database configuration
# For SQLite: sqlite:///./data/soulsense.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./data/soulsense.db

# JWT configuration
SECRET_KEY=generate_a_secure_random_key_here_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# Provide origins as a comma-separated list (no spaces required between commas)
# Example: BACKEND_CORS_ORIGINS=http://localhost:3000,http://app.soulsense.io
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3005,tauri://localhost

