{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "soul-sense",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://127.0.0.1:3005",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Soul Sense",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/soul-sense-backend"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/your-repo/soul-sense/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "your-public-key-here"
    },
    "deep-link": {
      "domains": [
        {
          "host": "soulsense",
          "schemes": ["soulsense"]
        }
      ]
    }
  }
}
